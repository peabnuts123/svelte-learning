{
  "name": "svelte-learning",
  "version": "1.0.0",
  "description": "Learning-by-doing package for svelte",
  "main": "index.js",
  "repository": "git@github.com:peabnuts123/svelte-learning.git",
  "author": "peabnuts123 <peabnuts123@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "http-server",
    "build": "rimraf dist && svelte compile -f iife -i src/ -o dist/",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": ["src"],
      "extensions": "html"
    }
  },
  "devDependencies": {
    "bootstrap": "^3.3.7",
    "http-server": "^0.9.0",
    "npm-watch": "^0.1.8",
    "rimraf": "^2.5.4"
  }
}
